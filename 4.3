factorial <- function(n) {
  if (n == 0 || n == 1) {
    return(1)
  } else {
    return(n * factorial(n - 1))
  }
}

ncr <- function(n, r) {
  if (r == 0 || r == n) {
    return(1)
  } else {
    return(factorial(n) / (factorial(r) * factorial(n - r)))
  }
}

main <- function() {
  n <- as.numeric(readline("Enter the value of n : "))
  r <- as.numeric(readline("Enter the value of r : "))
  

  if (n %% 1 != 0 || r %% 1 != 0 || n < 0 || r < 0) {
    cat("Error: n and r must be non-negative integers.\n")
    return()
  }
  
  if (n < r) {
    cat("Error: n must be greater than or equal to r.\n")
    return()
  }
  
  fact_n <- factorial(n)
  fact_r <- factorial(r)
  fact_nr <- factorial(n - r)
  
  result <- ncr(n, r)
  
  cat("Factorial of", n, "is", fact_n, "\n")
  cat("Factorial of", r, "is", fact_r, "\n")
  cat("Factorial of", n - r, "is", fact_nr, "\n")
  cat("Value of", n, "C", r, "is", result, "\n")
}

main()
